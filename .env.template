# .env.template

# Environment variables for the Cryptocurrency Trading System

# Coinbase API credentials (required for live trading)
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_API_SECRET=your_coinbase_api_secret_here
COINBASE_API_PASSPHRASE=your_coinbase_api_passphrase_here

# Application settings
DEMO_MODE=True           # True: demo mode (no real trades)
DEBUG=False              # True: enable debug mode with verbose logging
PORT=8050                # Port for the dashboard and API server

# Optional AI modules (if applicable)
OPENAI_API_KEY=your_openai_api_key_here

# Instructions:
# 1. Copy this file to .env and fill in your own credentials.
# 2. Do NOT commit your .env file to version control.
